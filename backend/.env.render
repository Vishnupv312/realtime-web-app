# =======================================
# RENDER DEPLOYMENT ENVIRONMENT VARIABLES
# =======================================

# Server Configuration
PORT=10000
NODE_ENV=production
CORS_ORIGIN=https://realtime-web-app-ecru.vercel.app

# Database Configuration (MongoDB Atlas recommended)
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/realtime_chat?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-replace-this
JWT_EXPIRES_IN=7d

# Redis Configuration (Redis Cloud or Upstash recommended)
# Get from your Redis provider
REDIS_URL=redis://username:password@hostname:port
REDIS_HOST=hostname
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_VOICE_DURATION=300
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Clustering (Render handles scaling automatically)
CLUSTER_MODE=false
CLUSTER_WORKERS=0

